}

infobar label {
    color: @text_color;
    padding: 3px;
}

infobar.error revealer > box {
    background-color: shade (@error_color, 1.2);
    background-image: -gtk-icontheme("process-error-symbolic");
    border-color: @error_color;
    box-shadow:
        inset 0 1px 0 0 alpha (@error_color, 0.3),
