    background-image: -gtk-icontheme("dialog-warning-symbolic");
    border-color: shade (@warning_color, 0.9);
    box-shadow:
        inset 0 1px 0 0 @warning_color,
        inset 0 -1px 0 0 alpha (#fff, 0.4);
    color: shade (@warning_color, 0.25);
