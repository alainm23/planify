{
    "app-id": "com.github.alainm23.planner",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "base": "io.elementary.BaseApp",
    "base-version": "juno-19.08",
    "command": "com.github.alainm23.planner",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.gnome.evolution.dataserver.AddressBook9",
        "--talk-name=org.gnome.evolution.dataserver.Calendar7",
        "--talk-name=org.gnome.evolution.dataserver.Sources5",
        "--talk-name=org.gnome.evolution.dataserver.Subprocess.Backend.*",
        "--filesystem=home",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
        "name" : "libical",
        "cleanup" : [
            "/lib/cmake"
        ],
        "buildsystem" : "cmake-ninja",
        "config-opts" : [
        "-DCMAKE_INSTALL_LIBDIR:PATH=/app/lib",
        "-DBUILD_SHARED_LIBS=On",
        "-DICAL_BUILD_DOCS=False",
        "-DWITH_CXX_BINDINGS=False"
        ],
        "sources" : [
        {
            "type" : "archive",
            "url" : "https://github.com/libical/libical/releases/download/v3.0.5/libical-3.0.5.tar.gz",
            "sha256" : "7ad550c8c49c9b9983658e3ab3e68b1eee2439ec17b169a6b1e6ecb5274e78e6"
        }
        ]
        },
        "shared-modules/intltool/intltool-0.51.json",
        {
        "name": "evolution-data-server",
        "buildsystem": "cmake-ninja",
        "config-opts": [
            "-DENABLE_GTK=ON",
            "-DENABLE_INTROSPECTION=ON",
            "-DENABLE_VALA_BINDINGS=ON",
            "-DENABLE_GOA=OFF",
            "-DENABLE_OAUTH2=OFF",
            "-DENABLE_WEATHER=OFF",
            "-DENABLE_GOOGLE=OFF",
            "-DENABLE_EXAMPLES=OFF",
            "-DENABLE_INSTALLED_TESTS=OFF",
            "-DENABLE_GTK_DOC=OFF",
            "-DWITH_PRIVATE_DOCS=OFF",
            "-DWITH_OPENLDAP=OFF",
            "-DWITH_LIBDB=OFF"
        ],
        "sources" : [
            {
                "type": "archive",
                "url": "https://download.gnome.org/sources/evolution-data-server/3.31/evolution-data-server-3.31.3.tar.xz",
                "sha256": "d652b4efc5150042ec0b2d7a371a908befcfe8398a78b29e9974d13928500597"
            }
        ]
        },
        {
        "name": "planner",
        "buildsystem": "meson",
        "sources": [{
            "type": "archive",
            "url": "https://github.com/alainm23/planner/archive/2.0.5.zip",
            "sha256": "b08eb2beb8852ea085bdff4febbf3fd6a7bbe7fb23e3590cc7f7255f3571eb33"
        }]
        }
    ]
}